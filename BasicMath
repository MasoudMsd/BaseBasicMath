
            return (sum, false); // بدون خطا
        }
    }

    // تابع تفریق کننده
    function subtractor(uint _a, uint _b) public pure returns (uint difference, bool error) {
        unchecked {
            // بررسی underflow
            if (_b > _a) {
                return (0, true); // underflow رخ داده است
            }
            difference = _a - _b;
            return (difference, false); // بدون خطا
        }
    }
}
